{
  "compilerOptions": {
    "target": "ES2020",
    "module": "None",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "declaration": false,
    "outDir": "./public/dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": false,
    "isolatedModules": false,
    "noEmit": false
  },
  "files": [
    "src/app.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "src/constants",
    "src/types",
    "src/utils"
  ]
}